import json
import boto3
import urllib3
import os
from datetime import datetime

ddb = boto3.client('dynamodb')
sns = boto3.client('sns')
http = urllib3.PoolManager()

SLACK_WEBHOOK_URL = os.environ['SLACK_WEBHOOK_URL']
SNS_TOPIC_ARN = os.environ['SNS_TOPIC_ARN']
DDB_TABLE_NAME = os.environ['DDB_TABLE_NAME']

def lambda_handler(event, context):
    for record in event['Records']:
        bucket = record['s3']['bucket']['name']
        key = record['s3']['object']['key']
        timestamp = datetime.utcnow().isoformat()

        message = f"üìÅ New file uploaded to S3:\nBucket: {bucket}\nKey: {key}"

        # 1. Send to Slack
        http.request('POST', SLACK_WEBHOOK_URL, body=json.dumps({'text': message}),
                     headers={'Content-Type': 'application/json'})

        # 2. Publish to SNS
        sns.publish(TopicArn=SNS_TOPIC_ARN, Message=message, Subject='New S3 Upload')

        # 3. Save to DynamoDB
        ddb.put_item(
            TableName=DDB_TABLE_NAME,
            Item={
                'assign': {'S': key},
                'uploadtimestamp': {'S': timestamp}
            }
        )

    return {
        'statusCode': 200,
        'body': json.dumps('Processing complete!')
    }
